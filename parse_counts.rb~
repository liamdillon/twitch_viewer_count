#!/home/ubuntu/.rbenv/shims/ruby

f = open('viewer_counts.txt', 'r')

open('parsed_counts.txt', 'a') do |p|
  f.each_line do |line|
    if line.include? 'Timestamp'
      p << line.split(' ')[1] + ','
    end
    if line.include? 'Number of channels'
      p << line.split(': ')[1] + ','
    end
    if line.include? 'Total viewers:'
      p << line.split(': ')[1]
      p << "\n"
    end
  end
end
